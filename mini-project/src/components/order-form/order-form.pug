                    .order-form-wrapper__input-item
                        input#POST-phone(type='text' name='phone' placeholder='+38(0_ _)_ _ _ _ _ _ _' data-input-validation="phone")
                    .order-form-wrapper__input-item
                        input#POST-subject(type='text' name='subject' placeholder='' data-input-validation="required")
                .order-form-wrapper__input-box
                    .order-form-wrapper__input-item
                        textarea#POST-message(name='message' placeholder='Comment' data-input-validation="required")
                .order-form-wrapper__input-submit
                    button.order-form-wrapper__btn(type='submit') Submit